<div id="<%= dom_id movie %>" class="card mb-4">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0"><%= movie.title %></h5>
  </div>
  <div class="card-body">
    <p class="mb-2">
      <strong>Blurb:</strong>
      <span><%= movie.blurb %></span>
    </p>

    <p class="mb-2">
      <strong>Genres:</strong>
      <span><%= movie.genres.pluck(:name).join(', ') %></span>
    </p>

    <p class="mb-2">
      <strong>Date Released:</strong>
      <span><%= movie.date_released %></span>
    </p>

    <p class="mb-2">
      <strong>Country of Origin:</strong>
      <span><%= movie.country_of_origin %></span>
    </p>

    <p class="mb-2">
      <strong>Showing Start:</strong>
      <span><%= movie.showing_start %></span>
    </p>

    <p class="mb-2">
      <strong>Showing End:</strong>
      <span><%= movie.showing_end %></span>
    </p>
  </div>
</div>
