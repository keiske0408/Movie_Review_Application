<p class="text-success"><%= notice %></p>

<h1 class="display-4"><%= @movie.title %></h1>
<p class="lead">Average Rating: <strong><%= @movie.average_rating %></strong></p>
<p class="lead"><i><%= @movie.blurb %></i></p>

<h2>Reviews</h2>
<div class="mb-4">
  <% @movie.reviews.each do |review| %>
    <div class="card mb-3">
      <div class="card-body">
        <strong><%= review.content %></strong> (Rating: <%= review.rating %>)
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-between mt-4">
  <div class="d-flex">
    <% if user_signed_in? %>
      <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn btn-warning me-2" %>
      <%= button_to "Destroy this movie", @movie, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this movie?" } %>
    <% else %>
      <button class="btn btn-warning me-2" disabled>Edit this movie</button>
      <button class="btn btn-danger" disabled>Destroy this Movie</button>
    <% end %>
  </div>
  <div>
    <%= link_to "Back to movies", movies_path, class: "btn btn-secondary" %>
  </div>
</div>

